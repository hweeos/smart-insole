<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="16dp" >

        <!-- Threshold Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Threshold Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />
        <!-- Pressure Threshold -->
        <EditText
            android:id="@+id/editTextPressureThreshold"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter Pressure Threshold"
            android:inputType="numberDecimal"
            android:layout_marginTop="16dp" />

        <!-- Temperature Threshold -->
        <EditText
            android:id="@+id/editTextTemperatureThreshold"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter Temperature Threshold"
            android:inputType="numberDecimal"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="16dp">

        <!-- Notification Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Push Notification Toggle -->
        <Switch
            android:id="@+id/switchPushNotifications"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Enable Push Notifications"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</LinearLayout>